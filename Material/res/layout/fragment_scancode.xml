<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danny_background_light"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="36dp"
        android:layout_weight="1"
        android:src="@drawable/ic_qrcode" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/danny_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false" >

            <FrameLayout
                android:id="@+id/button_check_numbers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scan_btn_selected" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="查询签到情况"
                    android:textColor="@color/danny_white"
                    android:textSize="20sp" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@id/third"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/danny_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false" >

            <FrameLayout
                android:id="@+id/button_create_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scan_btn_selected" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="发起签到"
                    android:textColor="@color/danny_white"
                    android:textSize="20sp" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@id/second"
            app:cardBackgroundColor="@color/danny_background"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false" >

            <FrameLayout
                android:id="@+id/button_scan_qrcode_sign_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scan_btn_selected" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="我要签到"
                    android:textColor="@color/danny_white"
                    android:textSize="20sp" />
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>