<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/danny_background_light"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:elevation="4dp" >

    <LinearLayout
        android:id="@+id/school_time_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/school_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/danny_background"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/school_time_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_school_item_time"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/second_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/school_time_pos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_school_item_pos"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/second_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/school_time_seat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawableLeft="@drawable/ic_school_item_seat"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/second_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/school_time_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_school_item_note"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/second_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_right_roundrect">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/school_time_item1"
                android:textColor="@color/content_text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/school_time_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="520"
                android:textColor="@color/danny_white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="@string/school_time_item2"
                android:textColor="@color/content_text_color"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>