<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- ToolBar Color -->
        <item name="colorPrimary">@color/danny_background</item>
        <!-- StatusBar Color -->
        <item name="colorPrimaryDark">@color/danny_background_dark</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ImageView.Hamburger" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="ImageView_MenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView_MenuItem">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/danny_white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Expand_MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/danny_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/expand_button_selector</item>
    </style>

    <style name="Expand_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/danny_background_dark</item>
    </style>

    <style name="LinearLayout_MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayout_MenuItem_2" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Login_EditText">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textColor">@color/danny_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Modify_EditText">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:textColor">@color/second_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@drawable/modify_cursor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TabTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="RadioButtonDrawable" parent="Material.Drawable.RadioButton">
        <item name="rbd_strokeColor">@color/danny_background</item>
    </style>

    <style name="MyFloatingActionButton" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="fab_backgroundColor">#FFDFDFDF</item>
        <item name="fab_elevation">4dp</item>
        <item name="rd_delayClick">none</item>
        <item name="rd_rippleColor">@color/danny_background_dark</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
        <item name="di_elevation">6dp</item>
        <item name="di_titleTextColor">@color/danny_background</item>
        <item name="di_actionTextColor">@color/danny_background</item>
        <item name="di_radioButtonStyle">@style/RadioButtonDrawable</item>
        <item name="di_actionTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="di_titleTextAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
        <item name="di_elevation">6dp</item>
        <item name="di_titleTextColor">@color/danny_background</item>
        <item name="di_actionTextColor">@color/danny_background</item>
        <item name="di_actionTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="di_titleTextAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="DateSimpleDialogLight" parent="Material.App.Dialog.DatePicker.Light">
        <item name="di_actionTextColor">@color/danny_background</item>
    </style>

    <style name="TimeSimpleDialogLight" parent="Material.App.Dialog.TimePicker.Light">
        <item name="di_actionTextColor">@color/danny_background</item>
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/danny_background_200</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="dp_textHeaderColor">#90FFFFFF</item>
    </style>

    <style name="ButtonRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/danny_background_dark</item>
        <item name="rd_rippleAnimDuration">100</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="dp_textHeaderColor">#90FFFFFF</item>
    </style>

</resources>